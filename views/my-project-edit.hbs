{{#> layout title="Edit Project"}}


    <section class="Project-form">

      <form action="/project-update/{{data.id}}?_method=PATCH" method="post" class="form" enctype="multipart/form-data">
        <h1 class="section title">Edit Project</h1>
        <div class="a">
          <label for="title">Project Name</label>
          <input
            placeholder="Project Name"
            type="text"
            name="title"
            id="title"
            value="{{data.title}}"
            
          /> 
        </div>
        <div class="input-date">
          <div class="start-date">
            <label for="start">Start Date</label>
            <input
              placeholder=""
              type="date"
              name="start"
              id="start"
              value="{{data.start}}"
              
            />
          </div>
          <div class="end-date">
            <label for="end">End Date</label>
            <input
              placeholder=""
              type="date"
              name="end"
              id="end"
              value="{{data.end}}"
            />
          </div>
        </div>

        <div class="a">
          <label for="content">Your Massage</label>
          <textarea id="content" name="content" rows="8">{{data.content}}</textarea>
        </div>

        <div class="checkbox">
          <div>
            <label for="node-js">
              <input
                class="bs"
                type="checkbox"
                id="node-js"
                name="icon"
                value="lni lni-nodejs"
                {{isChecked "lni lni-nodejs" data.icons}}
                
              />
              
              Node Js</label
            >
            <label for="react-js">
              <input
                type="checkbox"
                id="react-js"
                name="icon"
                value="lni lni-react"
                {{isChecked "lni lni-react" data.icons}}
                
              />
              React Js</label
            >
          </div>
          <div>
            <label for="next-js">
              <input
                type="checkbox"
                id="next-js"
                name="icon"
                value="lni lni-nextjs"
                {{isChecked "lni lni-nextjs" data.icons}}
              />
              Next Js</label
            >
            <label for="TypeScript">
              <input
                type="checkbox"
                id="TypeScript"
                name="icon"
                value="lni lni-typescript"
                {{isChecked "lni lni-typescript" data.icons}}
              />
              TypeScript</label
            >
          </div>
        </div> 

        <div class="form-field mt-4 mb-5">
        <label for="image" class="form-label"></label>
        <input id="image" name="image" class="form-control"  type="file">
      </div>
 
<div class="">
        {{!-- <p id="preview">{{data.image}}</p> --}}
        <img id="preview" src="{{data.image}}"  class="img-thumbnail" style="max-height: 300px;">
      </div>

        <div class="button">
            <button class="btn" type="submit">Save</button>
          </div>
      </form>
    </section>

    <script src="/assets/JS/image-preview.js"></script>
    {{/layout}}
