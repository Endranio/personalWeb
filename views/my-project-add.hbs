{{#> layout title="AddProject" user=user}}


<section class="Project-form">

  <form action="/add-project" method="post" class="form" enctype="multipart/form-data">
    <h1 class="section title">Add Project</h1>
    <div class="a">
      <label for="title">Project Name</label>
      <input placeholder="Project Name" type="text" name="title" id="title" />
    </div>
    <div class="input-date">
      <div class="start-date">
        <label for="start">Start Date</label>
        <input placeholder="" type="date" name="start" id="start" />
      </div>
      <div class="end-date ">
        <label for="end">End Date</label>
        <input placeholder="" type="date" name="end" id="end" />
      </div>
    </div>

    <div class="a"> 
      <label for="content">Your Massage</label>
      <textarea id="content"  name="content" rows="8"></textarea>
    </div>

    <div class="checkbox">
      <div>
        <label for="node-js">
          <input class="bs" type="checkbox" id="node-js" name="icon" value="lni lni-nodejs" />

          Node Js</label>
        <label for="react-js">
          <input  type="checkbox" id="react-js" name="icon" value="lni lni-react" />
          React Js</label>
      </div>
      <div>
        <label for="next-js">
          <input type="checkbox" id="next-js" name="icon" value="lni lni-nextjs" />
          Next Js</label>
        <label for="TypeScript">
          <input type="checkbox" id="TypeScript" name="icon" value="lni lni-typescript" />
          TypeScript</label>
      </div>
    </div>

     <div class="form-field mt-4 mb-5">
        <label for="image" class="form-label"></label>
        <input id="image" name="image" class="form-control" type="file">
      </div>

<div class="">
        <img id="preview" src="../assets/img/blog-img-detail.png" alt="image preview" class="img-thumbnail d-none" style="max-height: 300px;">
      </div>


    <div class="button">
      <button class="btn" type="submit">Submit</button>
    </div>
  </form>
</section>

<script src="/assets/JS/image-preview.js"></script>
{{/layout}}